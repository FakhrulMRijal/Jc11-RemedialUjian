<!DOCTYPE html>
<html>

<head>
    <title>Ujian</title>
</head>

<body>

    <div id="output">
    </div>
    <h3>Triangle Study</h3>

    <input type="number" id="input">
    <button type="submit" onclick="segitigaGanjil()">Submit</button>
    <script>
        function segitigaGanjil() {
            var n = document.getElementById('input').value
            var output = ''
            var odd = 1
            for (var i = 0; i < n; i++) {
                for (var j = i; j < n; j++) {
                    output += '\xa0'
                }
                for (var k = 0; k <= i; k++) {
                    output += '\xa0' + odd
                    odd = odd + 2
                }
                output += '\n'
            }
            document.getElementById('output').innerText = output
        }
        
    </script>
</body>

</html>
